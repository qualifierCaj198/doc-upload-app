<%- include('layout', { body: `
<section class="card">
  <h3>Admin: Recent Uploads</h3>
  <table>
    <thead>
      <tr>
        <th>When</th>
        <th>Name</th>
        <th>Phone</th>
        <th>Email</th>
        <th>Lead ID</th>
        <th>TLD</th>
        <th>Connex</th>
        <th>Files</th>
      </tr>
    </thead>
    <tbody>
      ${rows.map(r => `
        <tr>
          <td>${r.created_at_fmt}</td>
          <td>${r.first_name} ${r.last_name}</td>
          <td>${r.phone}</td>
          <td>${r.email}</td>
          <td>${r.lead_id || ''}</td>
          <td title="${r.tld_error || ''}">${r.tld_status || ''}</td>
          <td title="${r.connex_error || ''}">${r.connex_status || ''}</td>
          <td>
            ${(r.files || []).map(f => f.originalname).join('<br/>')}
          </td>
        </tr>
      `).join('')}
    </tbody>
  </table>
</section>
` }) %>
